<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config />
    
	<bean id="employee" class="com.howtodoinjava.core.autowire.byName.Employee" autowire="byName">
		<constructor-arg value = "455" type="int"></constructor-arg>
	</bean>

	<alias name="point1" alias="pointA"></alias>
	<alias name="point2" alias="pointB"></alias>
	<alias name="point3" alias="pointC"></alias>
	<alias name="point3" alias="pointB"></alias>

	<bean id="point1" class="com.howtodoinjava.core.autowire.byName.Point">
		<property name="x" value="0"></property>
		<property name="y" value="10"></property>
	</bean>

	<bean id="point2" class="com.howtodoinjava.core.autowire.byName.Point">
		<property name="x" value="10"></property>
		<property name="y" value="0"></property>
	</bean>

	<bean id="point3" class="com.howtodoinjava.core.autowire.byName.Point">
		<property name="x" value="10"></property>
		<property name="y" value="10"></property>
	</bean>

	<bean id="triangle" class="com.howtodoinjava.core.autowire.byName.Triangle">
		<property name="p1" ref="pointA"></property>
		<property name="p2" ref="pointB"></property>
		<property name="p3" ref="pointC"></property>
	</bean>





	<bean id="department" class="com.howtodoinjava.core.autowire.byName.Department" >
		<property name="name" value="Human Resource" />
	</bean>

</beans>